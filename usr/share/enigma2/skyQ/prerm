cd /
echo "Checking for an older versions"
if [ -d /usr/share/enigma2/skyQ ]
then
rm -rf /usr/share/enigma2/skyQ > /dev/null 2>&1
echo "An older version was found and removed"
echo "Proceeding to installation..."
else
echo "No existing version was found on the system"
echo "Proceeding to installation..."
fi

echo "Checking for an older versions"
if [ -d /usr/share/enigma2/SkyQ ]
then
rm -rf /usr/share/enigma2/SkyQ > /dev/null 2>&1
echo "An older version was found and removed"
echo "Proceeding to installation..."
else
echo "No existing version was found on the system"
echo "Proceeding to installation..."
fi

echo "Checking for old scripts"
if [ -e /usr/script/ChabsScrape.sh ]
then
rm -rf /usr/script/ChabsScrape.sh > /dev/null 2>&1
echo "Script removed"
fi
echo "Checking for old scripts"
if [ -e /usr/script/skyQPicks.sh ]
then
rm -rf /usr/script/skyQPicks.sh > /dev/null 2>&1
echo "Script removed"
fi
echo "Checking for old scripts"
if [ -e /usr/scripts/ChabsScrape.sh ]
then
rm -rf /usr/scripts/ChabsScrape.sh > /dev/null 2>&1
echo "Script removed"
fi
echo "Checking for old scripts"
if [ -e /usr/scripts/skyQPicks.sh ]
then
rm -rf /usr/scripts/skyQPicks.sh > /dev/null 2>&1
echo "Script removed"
fi
exit 0
